{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Music Maker - gen_params (Web)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "audio_file_id",
    "ref_segment",
    "style",
    "text",
    "render",
    "runtime"
  ],
  "properties": {
    "audio_file_id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128
    },
    "ref_segment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "start_sec",
        "end_sec"
      ],
      "properties": {
        "start_sec": {
          "type": "number",
          "minimum": 0
        },
        "end_sec": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "source": {
          "type": "string",
          "enum": [
            "user",
            "auto"
          ],
          "default": "auto"
        }
      }
    },
    "style": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text"
      ],
      "properties": {
        "text": {
          "type": "string",
          "minLength": 2,
          "maxLength": 200
        },
        "exclude": {
          "type": "string",
          "maxLength": 200,
          "default": ""
        }
      }
    },
    "text": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prompt",
        "mode"
      ],
      "properties": {
        "prompt": {
          "type": "string",
          "maxLength": 1200,
          "default": ""
        },
        "mode": {
          "type": "string",
          "enum": [
            "manual",
            "assist"
          ],
          "default": "assist"
        }
      }
    },
    "render": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "vocal_mode",
        "creativity_level",
        "style_lock"
      ],
      "properties": {
        "vocal_mode": {
          "type": "string",
          "enum": [
            "female",
            "male",
            "instrumental"
          ],
          "default": "female"
        },
        "creativity_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 50
        },
        "style_lock": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 50
        }
      }
    },
    "provider_overrides": {
      "type": "object",
      "additionalProperties": true
    },
    "runtime": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "agent_version",
        "platform",
        "device"
      ],
      "properties": {
        "agent_version": {
          "type": "string",
          "minLength": 3,
          "maxLength": 32
        },
        "platform": {
          "type": "string",
          "const": "web"
        },
        "device": {
          "type": "string",
          "enum": [
            "mobile",
            "desktop"
          ]
        },
        "browser_family": {
          "type": "string",
          "maxLength": 32
        },
        "trace_id": {
          "type": "string",
          "maxLength": 128
        },
        "track_id": {
          "type": "string",
          "maxLength": 128
        },
        "job_id": {
          "type": "string",
          "maxLength": 128
        },
        "app_version": {
          "type": "string",
          "maxLength": 32
        },
        "experiment_bucket": {
          "type": "string",
          "maxLength": 64
        },
        "seed": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      }
    }
  }
}