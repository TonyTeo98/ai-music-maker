# ===== 本地开发环境配置示例 =====
# 复制此文件为 .env.local 用于本地开发

# 数据库（Docker 内部）
DATABASE_URL="postgresql://aimm:aimm_dev_password@localhost:5432/aimm"

# Redis（Docker 内部）
REDIS_URL="redis://localhost:6379"

# ===== 存储配置 =====
# 选项 1: 使用本地 MinIO（推荐用于开发）
USE_LOCAL_STORAGE=true
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET="aimm-assets"
S3_REGION="us-east-1"

# 选项 2: 使用 Cloudflare R2（生产环境配置）
# USE_LOCAL_STORAGE=false
# S3_ENDPOINT="https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com"
# S3_ACCESS_KEY="your_r2_access_key"
# S3_SECRET_KEY="your_r2_secret_key"
# S3_BUCKET="aimm"
# S3_REGION="auto"
# R2_PUBLIC_URL="https://your-public-domain.com"

# CQTAI Suno API
CQTAI_API_KEY="your_api_key_here"
CQTAI_API_BASE_URL="https://api.cqtai.com"

# Langfuse（可观测性）
LANGFUSE_SECRET_KEY="sk-lf-xxx"
LANGFUSE_PUBLIC_KEY="pk-lf-xxx"
LANGFUSE_HOST="https://cloud.langfuse.com"

# 应用配置
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3001"
